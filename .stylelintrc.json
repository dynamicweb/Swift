{
  "extends": "stylelint-config-recommended",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "no-invalid-double-slash-comments": null,
    "scss/at-rule-no-unknown": [true,{
        "ignoreAtRules": [
          "extends",
          "function",
          "if",
					"else",
          "each",
          "include",
          "mixin",
					"use"
        ]
      }
    ],
    "block-no-empty": null
  }
}
