@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>
 
 @{
    var creditLimit = (double)@Pageview.User.CustomFieldValues.First(x => x.CustomField.SystemName == "AccessUser_CreditLimit").Value;
    var currencyCode = @GetGlobalValue("Global:eCommerce.Currency");
 }

 <p> Account Credit: @currencyCode@creditLimit.ToString("#,#0")</p>
