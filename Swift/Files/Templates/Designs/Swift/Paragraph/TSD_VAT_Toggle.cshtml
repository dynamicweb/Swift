@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.ParagraphViewModel>

<div class="VATToggle">
  <section class="checkbox-container">
    <div class="checkbox">
      <input type="checkbox"/>
      <label></label>
    </div>
  </section>
  <div class="prices">
    <strong>Prices</strong>
    <p class="VAT">Exc Vat</p>
  </div>
</div>



<style>
.prices {
  width: 64px;
}

.prices strong {
  font-size: 12px;
  text-transform: uppercase;
}
.VATToggle {
  display: flex;
    align-items: center;
}
  .checkbox {
  position: relative;
  display: inline-block;
  transform: rotate(90deg);
}

.checkbox label {
    height: 14px;
    width: 38px;
    background: #3B3E411F;
    position: relative;
    display: inline-block;
    border-radius: 46px;
    transition: 0.4s;
}
.checkbox label:after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    border-radius: 100%;
    left: -1px;
    top: -3px;
    z-index: 2;
    background: #fff;
    transition: 0.4s;
    border: 2px solid #3B3E411F;
}
.checkbox input {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
  opacity: 0;
  cursor: pointer;
}

.checkbox input:checked + label:after {
  left: 40px;
}

.checkbox-container .checkbox input:checked + label {
  background: #19C07A;
}
.checkbox-container .checkbox input:checked + label:after {
  left: 24px;
}

</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var incVat = false; 
    var checkbox = document.querySelector(".VATToggle .checkbox input");
    var vatText = document.querySelector(".VAT");

    checkbox.addEventListener("change", function() {
      incVat = checkbox.checked;
      vatText.textContent = incVat ? "Inc Vat" : "Exc Vat";
    });
  });
</script>