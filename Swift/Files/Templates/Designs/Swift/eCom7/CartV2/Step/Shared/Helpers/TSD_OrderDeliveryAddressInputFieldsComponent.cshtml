<div class="container container-no-padding" id="add-new-address-container">
	<div class="row">
		<div class="col d-flex flex-column py-2">
			<label for="EcomOrderDeliveryCompany" class="conditional-rendered-label text-label-red">Company
				name</label>
			<input @disabledHiddenUser class="text-input-field" type="hidden" name="EcomOrderDeliveryCompany"
			       value="@GetString("Ecom:Order.Delivery.Company")">
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 d-flex flex-column  py-2">
			<label for="EcomOrderDeliveryAddress" class="conditional-rendered-label text-label-red">Address Line 1
				*</label>
			<input @disabledHiddenUser class="text-input-field" type="hidden" required="true"
			       name="EcomOrderDeliveryAddress"
			       value="@GetString("Ecom:Order.Delivery.Address")">
		</div>
		<div class="col-sm-6 d-flex flex-column  py-2">
			<label for="EcomOrderDeliveryAddress2" class="conditional-rendered-label text-label-red">Address Line
				2</label>
			<input @disabledHiddenUser class="text-input-field" type="hidden" name="EcomOrderDeliveryAddress2"
			       value="@GetString("Ecom:Order.Delivery.Address2")">
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 d-flex flex-column  py-2">
			<label for="EcomOrderDeliveryZip" class="conditional-rendered-label text-label-red">Postcode *</label>
			<input @disabledHiddenUser class="text-input-field" required="true" type="hidden"
			       name="EcomOrderDeliveryZip"
			       value="@GetString("Ecom:Order.Delivery.Zip")">
		</div>
		<div class="col-sm-6 d-flex flex-column  py-2">
			<label for="EcomOrderDeliveryCity" class="conditional-rendered-label text-label-red">Town/City *</label>
			<input @disabledHiddenUser class="text-input-field" type="hidden" required="true"
			       name="EcomOrderDeliveryCity"
			       value="@GetString("Ecom:Order.Delivery.City")">
		</div>
	</div>
</div>
