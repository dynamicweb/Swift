							</div>
						</div>
					}

					<div class="form-group">
						<label for="EcomOrderDeliveryAddress" class="col-sm-2 control-label">@Translate("Address", "Address")</label>
						<div class="col-sm-10">
							<input class="form-control" type="text" name="EcomOrderDeliveryAddress" id="EcomOrderDeliveryAddress" value='@GetValue("Ecom:Order."+type+".Address")' />
						</div>
					</div>
					<div class="form-group">
						<label for="EcomOrderDeliveryAddress2" class="col-sm-2 control-label">@Translate("Address_line_2", "Address Line 2")</label>
						<div class="col-sm-10">
							<input class="form-control" type="text" name="EcomOrderDeliveryAddress2" id="EcomOrderDeliveryAddress2" value='@GetValue("Ecom:Order."+type+".Address2")' />
						</div>
					</div>
					<div class="form-group">
						<label for="EcomOrderDeliveryZip" class="col-sm-2 control-label">@Translate("Zipcode", "Zipcode")</label>
						<div class="col-sm-10">
