@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.ParagraphViewModel>
@using Dynamicweb.Frontend.Navigation

@{
    var navigationSettings = new NavigationSettings();
    navigationSettings.IncludeFoldersAndHidden = true;
    navigationSettings.ExpandMode = ExpandMode.PathOnly;
    navigationSettings.Parameters.Add("menu-id", "breadcrumb");
    navigationSettings.Parameters.Add("showProductInBreadcrumb", Model.Item.GetBoolean("ShowProductInBreadcrumb"));
}

@Navigation.RenderNavigation("Navigation/BreadcrumbNavigation.cshtml", navigationSettings)
