@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.ParagraphViewModel>
@using Dynamicweb.Frontend
@using System.Collections.Generic

@{
    if(Model.Item.TryGetUsers("User", out var users)) {
        
        foreach(var user in users)
        {
            var company = user?.Company;
            var department = user?.Department;
            var email = user?.Email;
            var image = user?.Image;
            var jobTitle = user?.JobTitle;
            var name = user?.Name;
            var phoneBusiness = user?.PhoneBusiness;

            <div class="card overflow-hidden shadow-sm-hover lift" itemscope itemtype="https://schema.org/Person">
                <div class="row g-0">
                    <div class="col-md-4 d-grid align-content-center text-center p-3 lh-1" style="background-color: color-mix(in srgb, var(--bs-body-color) 15%, var(--bs-body-bg));">
                        @if(!string.IsNullOrEmpty(image))
                        {
                            <figure class="ratio ratio-1x1 mx-auto mb-2" style="max-inline-size: 5.5rem;">
                                <img src="@image" alt="@name" class="img-thumbnail object-fit-cover rounded-circle" itemprop="image"/>
                            </figure>
                        }
                        @if(!string.IsNullOrEmpty(name))
                        {
                            <h5 itemprop="name">@name</h5>
                        }
                        @if(!string.IsNullOrEmpty(jobTitle))
                        {
                            <small class="mb-0" itemprop="jobTitle">@jobTitle</small>
                        }
                    </div>
                    <div class="col-md-8 d-flex">
                        <div class="card-body align-content-center p-4">
                            <div class="row row-cols-2 row-gap-3 lh-1 fs-7">
                                @if(!string.IsNullOrEmpty(company))
                                {
                                    <div class="col">
                                        <h6 class="text-uppercase fs-8">@Translate("Company")</h6>
                                        <span class="text-body text-opacity-75" itemprop="worksFor">@company</span>
                                    </div>
                                }
                                @if(!string.IsNullOrEmpty(department))
                                {
                                    <div class="col">
                                        <h6 class="text-uppercase fs-8">@Translate("Department")</h6>
                                        <span class="text-body text-opacity-75" itemprop="department">@department</span>
                                    </div>
                                }
                                @if(!string.IsNullOrEmpty(email))
                                {
                                    <div class="col">
                                        <h6 class="text-uppercase fs-8">@Translate("Email")</h6>
                                        <a href="mailto:@email" itemprop="email">
                                            <span>@email</span>
                                        </a>
                                    </div>
                                }
                                @if(!string.IsNullOrEmpty(phoneBusiness))
                                {
                                    <div class="col">
                                        <h6 class="text-uppercase fs-8">@Translate("Phone")</h6>
                                        <a href="tel:@phoneBusiness" itemprop="telephone">
                                            <span>@phoneBusiness</span>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }           
}


