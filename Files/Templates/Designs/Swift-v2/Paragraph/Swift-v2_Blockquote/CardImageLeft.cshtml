@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.ParagraphViewModel>
@using Dynamicweb.Frontend;

<div class="card flex-row" itemscope itemtype="https://schema.org/Quotation">
	@if (Model.Item.TryGetImageFile("AuthorImage", out ImageFileViewModel authorImage))
	{
		<figure class="ratio m-0" style="--bs-aspect-ratio: 133%;min-width:25%;max-width:33.33%;">
			<img class="card-img object-fit-cover" src="@authorImage?.ToGetImage(new(){ Width = 400, Quality = 70 })" style="clip-path: ellipse(68% 68% at 28% 38%);object-position: @authorImage?.GetFocalPointPercentage()" alt="@authorImage?.Name">
		</figure>
	}
	<div class="card-body m-auto">
		@if (Model.Item.TryGetString("Quote", out string quote))
		{
			<blockquote class="blockquote fs-5 lh-sm" itemprop="text">
				@quote
			</blockquote>
		}
		@if (Model.Item.TryGetString("Author", out string author))
		{
			<div class="text-body fs-6 m-0 text-opacity-75" itemprop="author">@author</div>
		}
	</div>
</div>
