@inherits ViewModelTemplate<SavedCardListViewModel>
@using Dynamicweb.Rendering
@using Dynamicweb.Ecommerce.Frontend.SavedCards
@using Dynamicweb.Frontend

@{
    string baseUrl = SearchEngineFriendlyURLs.GetFriendlyUrl($"default.aspx?ID={Pageview.Page.ID}");
    string currentSortBy = Dynamicweb.Context.Current?.Request.QueryString.Get("SortBy") ?? Pageview.CurrentParagraph?.ModuleProperties?.GetValue("SortByField") ?? string.Empty;
    string currentSortOrder = Dynamicweb.Context.Current?.Request.QueryString.Get("SortOrder") ?? Pageview.CurrentParagraph?.ModuleProperties?.GetValue("SortOrder") ?? string.Empty;
    string nextSortOrder = currentSortOrder == "asc" ? "desc" : "asc";
    string arrow = currentSortOrder == "asc" ? @ReadFile("/Files/Images/Icons/arrow-up.svg") : @ReadFile("/Files/Images/Icons/arrow-down.svg");
    string modalType = Dynamicweb.Context.Current?.Request.QueryString.Get("ModalType");
}

<header class="hstack gap-3 mb-4">
    <h1 class="h4 mb-0">@(Pageview.Page.GetDisplayName())</h1>
</header>

<form data-swift-saved-cards-list
    hx-get="@(baseUrl)"
    hx-trigger="keyup delay:.3s, change, click from:input[type='radio'][name='SortBy']" 
    hx-sync="this:abort"
    hx-swap="outerHTML"
    hx-target="[data-swift-saved-cards-list]"
    hx-select="[data-swift-saved-cards-list]"
    hx-replace-url="true"
    hx-on:click="if (event.target.querySelector('input[type=radio][name=SortBy]') && event.target.querySelector('input[type=radio][name=SortBy]').checked) {
        this.querySelector('[name=SortOrder]').value = '@(nextSortOrder)';
    }">

    <input type="hidden" name="SortOrder" value="@(currentSortOrder)">

    <nav class="hstack gap-2 mb-3">
        <div class="flex-fill">
            <div class="input-group">
                <span class="input-group-text border-end-0 bg-body">
                    <span class="htmx-indicator spinner-border spinner-border-sm" aria-hidden="true"></span>
                    <span class="icon-2" data-swift-indicator-origin>@ReadFile("/Files/Images/Icons/magnifying-glass.svg")</span>
                </span>
                <input type="text" class="form-control border-start-0 border-end-0" name="FilterText" value="@Dynamicweb.Context.Current?.Request.QueryString.Get("FilterText")" placeholder="@Translate("Search cards")...">
                <button type="reset" class="input-group-text border-start-0 bg-body" onclick="this.closest('form').querySelector('[name=FilterText]').value = ''; this.closest('form').dispatchEvent(new Event('change', { bubbles: true }))">
                    <span class="icon-2">@ReadFile("/Files/Images/Icons/xmark.svg")</span>
                    <span class="visually-hidden">@Translate("Clear search")</span>
                </button>
            </div>
        </div>

        <button type="button" class="btn btn-sm btn-primary hstack gap-2 ms-auto py-2 px-3" data-dw-button
            hx-get="@(baseUrl)"
            hx-vals='{"LayoutTemplate": "/Designs/Swift-v2/eCom/CustomerExperienceCenter/SavedCards/Modals/AddCardModal.cshtml"}'
            hx-target="main"
            hx-select="#addCardModal"
            hx-swap="beforeend"
            hx-replace-url="false">
            <span class="icon-2 text-opacity-50">
                @ReadFile("/Files/Images/Icons/plus.svg")
            </span>
            @Translate("Add card")
        </button>
    </nav>

    <div class="card overflow-hidden">
        <table class="table table-md table-hover mb-0 align-middle fs-7" style="--bs-table-color: var(--bs-body-color);">
            <thead style="--bs-table-bg: rgba(var(--bs-body-color-rgb), .0275); --bs-table-color: rgba(var(--bs-body-color-rgb), 0.5);">
                <tr>
                    <th>
                        <label class="hstack gap-1" role="button">
                            <input type="radio" name="SortBy" value="Id" class="visually-hidden" checked="@(currentSortBy=="Id")" />
                            @Translate("Payment method") 
                            @if(currentSortBy=="Id") {
                                <span class="icon-1">@arrow</span>
                            }
                        </label>
                    </th>
                    <th>
                        <label class="hstack gap-1" role="button">
                            <input type="radio" name="SortBy" value="Name" class="visually-hidden" checked="@(currentSortBy=="Name")" />
                            @Translate("Name") 
                            @if(currentSortBy=="Name") {
                                <span class="icon-1">@arrow</span>
                            }
                        </label>
                    </th>
                    <th class="text-end">@Translate("Actions")</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var card in Model.SavedCardList)
                {
                    <tr class="position-relative">
                        <td>
                            <div class="hstack gap-2" title="@card.Payment.Name">
                                @if (card.Payment.Icon.EndsWith(".svg", StringComparison.OrdinalIgnoreCase)) {
                                    <span class="icon-2">
                                        @ReadFile(card.Payment.Icon)
                                    </span>
                                }
                                <span>@card.CardType</span>
                                <span>•••• •••• •••• @(card.Identifier.Length >= 4 ? card.Identifier.Substring(card.Identifier.Length - 4) : card.Identifier)</span>
                                @if (card.IsDefault) {
                                    <span class="icon-2">
                                        @ReadFile("/Files/Images/Icons/check.svg")
                                    </span>
                                }
                            </div>
                        </td>
                        <td>@card.Name</td>
                        <td class="text-end">
                             <div class="hstack gap-3">
                                <button class="btn btn-outline-secondary text-body hstack border-0 p-2 position-relative z-2" data-dw-button="outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-popper-config='{"strategy":"fixed", "placement":"bottom-end"}'>
                                    <span class="icon-2">
                                        @ReadFile("/Files/Images/Icons/ellipsis.svg")
                                    </span>
                                </button>
                                <ul class="dropdown-menu shadow-sm fs-7 p-1">
                                    <li>
                                        <button type="button" class="dropdown-item hstack gap-2 ps-2 pe-3 rounded-1"
                                            hx-get="@(baseUrl)"
                                            hx-vals='{"SavedCardId": "@(card.ID)", "LayoutTemplate": "/Designs/Swift-v2/eCom/CustomerExperienceCenter/SavedCards/Modals/SetAsDefaultModal.cshtml"}'
                                            hx-target="main"
                                            hx-select="#deleteCardModal"
                                            hx-swap="beforeend"
                                            hx-replace-url="false">
                                            <span class="icon-2 text-opacity-50">
                                                @ReadFile("/Files/Images/Icons/check.svg")
                                            </span>
                                            @Translate("Set as default")
                                        </button>
                                    </li>
                                    <li class="mx-n1"><hr class="dropdown-divider my-1"></li>
                                    <li>
                                        <button type="button" class="dropdown-item hstack gap-2 ps-2 pe-3 rounded-1 text-danger"
                                            hx-get="@(baseUrl)"
                                            hx-vals='{"SavedCardId": "@(card.ID)", "LayoutTemplate": "/Designs/Swift-v2/eCom/CustomerExperienceCenter/SavedCards/Modals/DeleteCardModal.cshtml"}'
                                            hx-target="main"
                                            hx-select="#deleteCardModal"
                                            hx-swap="beforeend"
                                            hx-replace-url="false">
                                            <span class="icon-2 text-opacity-50">
                                                @ReadFile("/Files/Images/Icons/trash.svg")
                                            </span>
                                            @Translate("Delete card")
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }

                @if (Model.SavedCardList.Count() < 1)
                {
                    <tr class="position-relative">
                        <td colspan="5">
                            <div class="d-grid py-4">
                                <span class="m-auto">
                                    <div class="d-grid rounded-circle m-auto" style="width:4rem;aspect-ratio:1;background-color:rgba(var(--bs-body-color-rgb), .0275);">
                                        <span class="icon-4 text-muted">
                                            @ReadFile("/Files/Images/Icons/credit-card.svg")
                                        </span>
                                    </div>
                                    <div class="mt-3">@Translate("No saved cards found")</div>
                                </span>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

    @if (Model.PageCount > 1)
    {
        <div class="hstack gap-3">
            <button type="submit"
                    class="btn btn-outline-secondary"
                    data-dw-button
                    name="PageNum"
                    value="@(Model.CurrentPage - 1)"
                    aria-label="@Translate("Go to previous page")"
                    disabled="@(Model.CurrentPage == 1)">
                @Translate("Previous")
            </button>

            <span class="text-muted">
                @Translate("Page") @(Model.CurrentPage) @Translate("of") @(Model.PageCount)
            </span>

            <button type="submit"
                    class="btn btn-outline-secondary"
                    data-dw-button
                    name="PageNum"
                    value="@(Model.CurrentPage + 1)"
                    aria-label="@Translate("Go to next page")"
                    disabled="@(Model.CurrentPage == Model.PageCount)">
                @Translate("Next")
            </button>
        </div>
    }
</form>