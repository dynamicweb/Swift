@inherits ViewModelTemplate<PageViewModel>
@using Dynamicweb.Frontend
@using Dynamicweb.Rendering

@{
    var savedCardId = Dynamicweb.Context.Current?.Request.QueryString.Get("SavedCardId");
    var savedCardName = Dynamicweb.Context.Current?.Request.QueryString.Get("SavedCardName");
    var baseUrl = SearchEngineFriendlyURLs.GetFriendlyUrl($"default.aspx?ID={Pageview.Page.ID}");
}

<div class="modal fade" id="renameCardModal" tabindex="-1" aria-labelledby="RenameCard" aria-hidden="true" 
  hx-on::load="bootstrap.Modal.getOrCreateInstance(this).show();"
  x-on:shown-bs-modal.dot="
    const input = Array.from($el.querySelectorAll('input')).find(el => el.type !== 'hidden');
    if (input) setTimeout(() => input.focus(), 0);
  "
  x-on:hide-bs-modal.dot="
    const el = document.activeElement;
    if (el && $el.contains(el)) el.blur();
  "
  x-on:hidden-bs-modal.dot="
    bootstrap.Modal.getOrCreateInstance($el).dispose();
    $el.remove();
  ">
  <div class="modal-dialog pt-8">
    <form method="post" class="modal-content"
          hx-post="@(baseUrl)"
          hx-swap="outerHTML"
          hx-target="[data-swift-saved-cards-list]"
          hx-select="[data-swift-saved-cards-list]"
          hx-replace-url="false"
      >
      <input type="hidden" name="SavedCardId" value="@(savedCardId)" />
      <input type="hidden" name="SavedCardCmd" value="CardRename" />
      
      <div class="modal-header">
        <h5 class="modal-title">@Translate("Rename card")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Translate("Cancel")"></button>
      </div>
      <div class="modal-body">
        <p class="text-muted">@Translate("Enter a new name for the card or change the existing name")</p>
        <div class="form-floating">
          <input type="text" class="form-control" name="Name" id="Name" placeholder="@Translate("Card name")" value="@savedCardName"/>
          <label for="Name" class="form-label">@Translate("Card name")</label>
        </div>
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary btn-sm" data-dw-button data-bs-dismiss="modal">@Translate("Cancel")</button>
        <button type="submit" class="btn btn-primary btn-sm" data-dw-button data-bs-dismiss="modal">@Translate("Save changes")</button>
      </div>
    </form>
  </div>
</div>

