@inherits ViewModelTemplate<OrderListViewModel>
@using Dynamicweb.Frontend
@using Dynamicweb.Rendering
@using Dynamicweb.Ecommerce.Frontend
@using Dynamicweb.Ecommerce.ProductCatalog

@{
    string baseUrl = SearchEngineFriendlyURLs.GetFriendlyUrl($"default.aspx?ID={Pageview.Page.ID}");
    
    @*Mock Data*@
    var mockInvoices = new[]
    {
        new { Id = "INV-1001", Client = "Acme Corp", Amount = 1250.75, Discount = 50.00, Balance = 1200.75, IssueDate = new DateTime(2025, 9, 5), DueDate = new DateTime(2025, 10, 5), Status = "Overdue" },
        new { Id = "INV-1002", Client = "BlueSky Logistics", Amount = 980.00, Discount = 0.00, Balance = 980.00, IssueDate = new DateTime(2025, 9, 10), DueDate = new DateTime(2025, 10, 10), Status = "Due Soon" },
        new { Id = "INV-1003", Client = "Northwind Traders", Amount = 2200.50, Discount = 100.50, Balance = 2100.00, IssueDate = new DateTime(2025, 8, 28), DueDate = new DateTime(2025, 9, 28), Status = "Overdue" },
        new { Id = "INV-1004", Client = "BrightTech Solutions", Amount = 450.00, Discount = 25.00, Balance = 425.00, IssueDate = new DateTime(2025, 9, 15), DueDate = new DateTime(2025, 10, 15), Status = "Pending" },
        new { Id = "INV-1005", Client = "GlobalFoods Ltd", Amount = 1500.25, Discount = 0.00, Balance = 1500.25, IssueDate = new DateTime(2025, 9, 20), DueDate = new DateTime(2025, 10, 20), Status = "Due Soon" },
    };
    @*Sorting Mock Data*@
    string sortBy = Dynamicweb.Context.Current?.Request.QueryString.Get("SortBy") ?? "Id";
    string sortOrder = Dynamicweb.Context.Current?.Request.QueryString.Get("SortOrder") ?? "asc";

    var invoices = mockInvoices.AsEnumerable();

    invoices = (sortBy, sortOrder) switch
    {
        ("Id", "asc") => invoices.OrderBy(i => i.Id),
        ("Id", "desc") => invoices.OrderByDescending(i => i.Id),
        ("Amount", "asc") => invoices.OrderBy(i => i.Amount),
        ("Amount", "desc") => invoices.OrderByDescending(i => i.Amount),
        ("Discount", "asc") => invoices.OrderBy(i => i.Discount),
        ("Discount", "desc") => invoices.OrderByDescending(i => i.Discount),
        ("Balance", "asc") => invoices.OrderBy(i => i.Balance),
        ("Balance", "desc") => invoices.OrderByDescending(i => i.Balance),
        ("DueDate", "asc") => invoices.OrderBy(i => i.DueDate),
        ("DueDate", "desc") => invoices.OrderByDescending(i => i.DueDate),
        _ => invoices
    };
    
    @*Filtering Mock Data*@
    string searchText = Dynamicweb.Context.Current?.Request.QueryString.Get("FilterText") ?? "";
    string statusFilter = Dynamicweb.Context.Current?.Request.QueryString.Get("Status") ?? "";
    string clientFilter = Dynamicweb.Context.Current?.Request.QueryString.Get("Client") ?? "";
    string dueDateFrom = Dynamicweb.Context.Current?.Request.QueryString.Get("DueDateFrom") ?? "";
    string dueDateTo = Dynamicweb.Context.Current?.Request.QueryString.Get("DueDateTo") ?? "";
    string minAmountStr = Dynamicweb.Context.Current?.Request.QueryString.Get("MinAmount") ?? "";
    string maxAmountStr = Dynamicweb.Context.Current?.Request.QueryString.Get("MaxAmount") ?? "";

    DateTime? dueDateFromDate = DateTime.TryParse(dueDateFrom, out var tempFromDate) ? tempFromDate : null;
    DateTime? dueDateToDate = DateTime.TryParse(dueDateTo, out var tempToDate) ? tempToDate : null;
    double? minAmount = double.TryParse(minAmountStr, out var min) ? min : null;
    double? maxAmount = double.TryParse(maxAmountStr, out var max) ? max : null;

    invoices = invoices
        .Where(i => string.IsNullOrEmpty(searchText) || 
                    i.Id.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                    i.Client.Contains(searchText, StringComparison.OrdinalIgnoreCase))
        .Where(i => string.IsNullOrEmpty(statusFilter) || i.Status == statusFilter)
        .Where(i => string.IsNullOrEmpty(clientFilter) || i.Client.Contains(clientFilter, StringComparison.OrdinalIgnoreCase))
        .Where(i => !dueDateFromDate.HasValue || i.DueDate >= dueDateFromDate)
        .Where(i => !dueDateToDate.HasValue || i.DueDate <= dueDateToDate)
        .Where(i => !minAmount.HasValue || i.Amount >= minAmount)
        .Where(i => !maxAmount.HasValue || i.Amount <= maxAmount);
}

<header class="hstack justify-content-between gap-2 mb-4">
    <div>
        <h1 class="h4 mb-0">@(Pageview.Page.GetDisplayName())</h1>
    </div>

    <div class="text-end" 
         id="selection-header"
         style="visibility: hidden;">
        <h2 class="h6 mb-0">@Translate("Total"): <span id="selected-total">$0.00</span></h2>
        <p class="fs-7 mb-0 text-muted"><span id="selected-count">0</span> @Translate("invoices") @Translate("selected")</p>
    </div>
</header>

<nav class="hstack gap-2 mb-3">
    <form class="flex-fill"
          hx-get="@(baseUrl)"
          hx-trigger="keyup delay:.5s, change" 
          hx-target="[data-swift-invoices-filter]"
          hx-swap="outerHTML"
          hx-select="[data-swift-invoices-filter]"
          hx-include="[name='Status'],[name='Client'],[name='MinAmount'],[name='MaxAmount'],[name='DueDateFrom'],[name='DueDateTo'],[name='SortBy'],[name='SortOrder'],[name='PageNum']"
          hx-replace-url="false"
    >
        <div class="input-group">
            <span class="input-group-text border-end-0 bg-body">
                <span class="htmx-indicator spinner-border spinner-border-sm" aria-hidden="true"></span>
                <span class="icon-2" data-swift-indicator-origin>@ReadFile("/Files/Images/Icons/magnifying-glass.svg")</span>
            </span>
            <input type="text" class="form-control border-start-0 border-end-0" name="FilterText" placeholder="@Translate("Search invoices or PO numbers")..." value="@searchText">
            <button type="reset" class="input-group-text border-start-0 bg-body" hx-on:click="this.closest('form').dispatchEvent(new Event('change', { bubbles: true }))">
                <span class="icon-2">@ReadFile("/Files/Images/Icons/xmark.svg")</span>
                <span class="visually-hidden">@Translate("Clear search")</span>
            </button>
        </div>
    </form>

    <form class="dropdown hstack"
          hx-get="@(baseUrl)"
          hx-trigger="change"
          hx-swap="outerHTML"
          hx-target="[data-swift-invoices-filter]"
          hx-select="[data-swift-invoices-filter]"
          hx-include="[name='FilterText'],[name='Status'],[name='Client'],[name='MinAmount'],[name='MaxAmount'],[name='DueDateFrom'],[name='DueDateTo'],[name='SortBy'],[name='SortOrder'],[name='PageNum']"
          hx-replace-url="false">

        <button class="btn btn-sm btn-outline-secondary hstack gap-2 ms-auto py-2 px-3 text-body" data-dw-button="outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="htmx-indicator spinner-border spinner-border-sm" aria-hidden="true"></span>
            <span class="icon-2" data-swift-indicator-origin>
                @ReadFile("/Files/Images/Icons/filter.svg")
            </span>
            @Translate("Filter")
        </button>

        <div class="dropdown-menu p-3 fs-7 shadow" style="--bs-dropdown-min-width:18rem;">
            <div class="fw-bold mb-1">@Translate("Status")</div>
            <div class="d-flex flex-wrap gap-2 mb-3" hx-swap-oob="true outerHTML:[data-swift-invoice-status-filter]" data-swift-invoice-status-filter>
                <input class="visually-hidden" type="radio" name="Status" id="status_all" value="" checked="@(string.IsNullOrEmpty(statusFilter))">
                <label for="status_all" class="fs-8 py-1 px-2 btn @(string.IsNullOrEmpty(statusFilter) ? "btn-primary" : "btn-outline-secondary text-body") lh-1" role="button" data-dw-button>@Translate("All")</label>

                <input class="visually-hidden" type="radio" name="Status" id="status_overdue" value="Overdue" checked="@(statusFilter == "Overdue")">
                <label for="status_overdue" class="fs-8 py-1 px-2 btn @(statusFilter == "Overdue" ? "btn-primary" : "btn-outline-secondary text-body") lh-1" role="button" data-dw-button>@Translate("Overdue")</label>

                <input class="visually-hidden" type="radio" name="Status" id="status_due_soon" value="Due Soon" checked="@(statusFilter == "Due Soon")">
                <label for="status_due_soon" class="fs-8 py-1 px-2 btn @(statusFilter == "Due Soon" ? "btn-primary" : "btn-outline-secondary text-body") lh-1" role="button" data-dw-button>@Translate("Due Soon")</label>

                <input class="visually-hidden" type="radio" name="Status" id="status_pending" value="Pending" checked="@(statusFilter == "Pending")">
                <label for="status_pending" class="fs-8 py-1 px-2 btn @(statusFilter == "Pending" ? "btn-primary" : "btn-outline-secondary text-body") lh-1" role="button" data-dw-button>@Translate("Pending")</label>
            </div>

            <div class="fw-bold mb-1">@Translate("Customer")</div>
            <input type="text" name="Client" class="form-control mb-3" placeholder="@Translate("Filter by customer")..." value="@clientFilter">

            <div class="fw-bold mb-1">@Translate("Amount")</div>
            <div class="d-flex gap-2 mb-3">
                <input type="number" name="MinAmount" class="form-control" placeholder="@Translate("Min")" value="@minAmountStr">
                <input type="number" name="MaxAmount" class="form-control" placeholder="@Translate("Max")" value="@maxAmountStr">
            </div>

            <div class="fw-bold mb-1">@Translate("Due Date Range")</div>
            <div class="d-flex gap-2 mb-3">
                <input type="date" name="DueDateFrom" class="form-control" placeholder="@Translate("From")" value="@dueDateFrom">
                <input type="date" name="DueDateTo" class="form-control" placeholder="@Translate("To")" value="@dueDateTo">
            </div>

            <button type="reset"
                    class="btn btn-outline-secondary text-body w-100 fs-7"
                    data-dw-button="outline-secondary"
                    hx-on:click="
                        const form = this.closest('form');
                        form.reset();
                        setTimeout(() => form.dispatchEvent(new Event('change', { bubbles: true })), 10);
                    ">
                @Translate("Clear All")
            </button>
        </div>
    </form>
        
</nav>

<div class="card border shadow-sm mb-3 bg-body-secondary bg-opacity-50" 
     id="bulk-actions-bar"
     style="display: none;">
    <div class="card-body p-3">
        <div class="d-flex align-items-center justify-content-between">
            <span class="fw-medium fs-7">
                <span id="bulk-actions-count">0</span> @Translate("selected")
            </span>
            <div class="d-flex align-items-center gap-2">
                <button type="button" 
                        class="btn btn-primary btn-sm d-flex align-items-center gap-2">
                    <span class="icon-2">@ReadFile("/Files/Images/Icons/credit-card.svg")</span>
                    @Translate("Continue to payment")
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card overflow-hidden">
    <div class="table-responsive" style="margin-bottom:-1px;"
         x-data="{
            sortBy: '@(Dynamicweb.Context.Current?.Request.QueryString.Get("SortBy") ?? "Id")',
            sortOrder: '@(Dynamicweb.Context.Current?.Request.QueryString.Get("SortOrder") ?? "asc")',
            sort(val) {
                if(this.sortBy === val) {
                    this.sortOrder = this.sortOrder === 'asc' ? 'desc' : 'asc';
                } else {
                    this.sortBy = val;
                }
                this.$refs.sortForm.SortBy.value = this.sortBy;
                this.$refs.sortForm.SortOrder.value = this.sortOrder;
                this.$refs.sortForm.dispatchEvent(new Event('change', { bubbles: true }));
            }
        }">
        
        <div data-swift-invoices-filter>
            <table class="table table-md table-hover mb-0 align-middle fs-7" style="--bs-table-color: var(--bs-body-color);">
                <thead style="--bs-table-bg: rgba(var(--bs-body-color-rgb), .0275); --bs-table-color: rgba(var(--bs-body-color-rgb), 0.5);">
                <tr>
                    <th style="width: 40px;">
                        <input type="checkbox" 
                               class="form-check-input" 
                               data-select-all
                               onchange="toggleSelectAll(this)"
                               aria-label="@Translate("Select all invoices")">
                    </th>
                    <th>
                        <form x-ref="sortForm"
                              hx-get="@(baseUrl)"
                              hx-trigger="change"
                              hx-target="[data-swift-invoices-filter]"
                              hx-swap="outerHTML"
                              hx-select="[data-swift-invoices-filter]"
                              hx-include="[name='FilterText'],[name='Status'],[name='Client'],[name='MinAmount'],[name='MaxAmount'],[name='DueDateFrom'],[name='DueDateTo'],[name='PageNum']">
                            <input type="hidden" name="SortBy" x-bind:value="sortBy"/>
                            <input type="hidden" name="SortOrder" x-bind:value="sortOrder"/>
                        </form>
                        <span role="button" class="hstack gap-1 text-nowrap" x-on:click="sort('Id')">
                            @Translate("Invoice ID")
                            <span x-show="sortBy === 'Id'">
                                <span x-text="sortOrder === 'asc' ? '↑' : '↓'"></span>
                            </span>
                        </span>
                    </th>
                    <th>
                        <span role="button" class="hstack gap-1" x-on:click="sort('DueDate')">
                            @Translate("Due Date")
                            <span x-show="sortBy === 'DueDate'">
                                <span x-text="sortOrder === 'asc' ? '↑' : '↓'"></span>
                            </span>
                        </span>
                    </th>
                    <th>
                        <span role="button" class="hstack gap-1" x-on:click="sort('Amount')">
                            @Translate("Amount")
                            <span x-show="sortBy === 'Amount'">
                                <span x-text="sortOrder === 'asc' ? '↑' : '↓'"></span>
                            </span>
                        </span>
                    </th>
                    <th>
                        <span role="button" class="hstack gap-1" x-on:click="sort('Discount')">
                            @Translate("Discount")
                            <span x-show="sortBy === 'Discount'">
                                <span x-text="sortOrder === 'asc' ? '↑' : '↓'"></span>
                            </span>
                        </span>
                    </th>
                    <th>
                        <span role="button" class="hstack gap-1" x-on:click="sort('Balance')">
                            @Translate("Balance")
                            <span x-show="sortBy === 'Balance'">
                                <span x-text="sortOrder === 'asc' ? '↑' : '↓'"></span>
                            </span>
                        </span>
                    </th>
                    <th>@Translate("Actions")</th>
                </tr>
                </thead>
                <tbody>
                <tr class="position-relative htmx-indicator" style="--bs-table-bg: rgba(var(--bs-body-color-rgb), .02);">
                    <td colspan="7">
                        <div class="d-grid py-4">
                            <span class="m-auto align-items-center text-body text-opacity-25">
                                <div class="spinner spinner-border"></div>
                            </span>
                        </div>
                    </td>
                </tr>
                @{
                    foreach (var invoice in invoices)
                    {
                        <tr class="position-relative">
                            <td>
                                <input type="checkbox" 
                                       class="form-check-input" 
                                       data-invoice-checkbox
                                       data-invoice-id="@invoice.Id"
                                       data-balance="@invoice.Balance"
                                       onchange="toggleInvoice(this, '@invoice.Id', @invoice.Balance)"
                                       aria-label="@Translate("Select invoice") @invoice.Id">
                            </td>
                            <td>
                                <div class="vstack position-relative">
                                    <a href="@(baseUrl)?OrderId=@(invoice.Id)" class="hstack gap-2 text-decoration-none text-decoration-underline-hover position-relative z-2">
                                        @(invoice.Id)
                                    </a>
                                </div>
                            </td>
                            <td>
                                <div>@(invoice.DueDate.ToShortDateString())</div>
                            </td>
                            <td>
                                <div>@(Dynamicweb.Ecommerce.Services.Currencies.Format(Dynamicweb.Ecommerce.Common.Context.Currency, invoice.Amount))</div>
                            </td>
                            <td>
                                <div>@(Dynamicweb.Ecommerce.Services.Currencies.Format(Dynamicweb.Ecommerce.Common.Context.Currency, invoice.Discount))</div>
                            </td>
                            <td>
                                <div>@(Dynamicweb.Ecommerce.Services.Currencies.Format(Dynamicweb.Ecommerce.Common.Context.Currency, invoice.Balance))</div>
                            </td>
                            <td>
                                <div class="hstack gap-3">
                                    <button class="btn btn-outline-secondary text-body hstack border-0 p-2 position-relative z-2 rounded-circle" data-dw-button="outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-popper-config='{"strategy":"fixed", "placement":"bottom-end"}'>
                                        <span class="icon-2">
                                            @ReadFile("/Files/Images/Icons/ellipsis.svg")
                                        </span>
                                    </button>
                                    <ul class="dropdown-menu shadow-sm fs-7 p-1">
                                        <li>
                                            <a class="dropdown-item hstack gap-2 ps-2 pe-3 rounded-1" href="@(baseUrl)?OrderId=@(invoice.Id)">
                                                <span class="icon-2">
                                                    @ReadFile("/Files/Images/Icons/eye.svg")
                                                </span>
                                                @Translate("View")
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div hx-swap-oob="true outerHTML:[data-swift-cart-list-pagination]" data-swift-cart-list-pagination>
    @if (Model.PageCount > 1)
    {
        <form class="mt-3">
            <ul class="pagination m-0">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    var active = (i == Model.CurrentPage) ? "active" : string.Empty;
                    <li class="page-item @active">
                        <button type="submit"
                                class="page-link"
                                name="PageNum"
                                value="@i"
                                aria-label="@Translate("Go to page") @i"
                                @(active == "active" ? "aria-current=\"page\"" : "")>
                            @i
                        </button>
                    </li>
                }
            </ul>
        </form>
    }
</div>

<script>
    let selectedInvoices = [];
    
    function toggleSelectAll(checkbox) {
        const allCheckboxes = document.querySelectorAll('[data-invoice-checkbox]');
        
        allCheckboxes.forEach(cb => {
            cb.checked = checkbox.checked;
            const invoiceId = cb.dataset.invoiceId;
            const balance = parseFloat(cb.dataset.balance);
            
            if (checkbox.checked) {
                if (!selectedInvoices.find(inv => inv.id === invoiceId)) {
                    selectedInvoices.push({ id: invoiceId, balance: balance });
                }
            }
        });
        
        if (!checkbox.checked) {
            selectedInvoices = [];
        }
        
        updateSelection();
    }
    
    function toggleInvoice(checkbox, invoiceId, balance) {
        if (checkbox.checked) {
            if (!selectedInvoices.find(inv => inv.id === invoiceId)) {
                selectedInvoices.push({ id: invoiceId, balance: parseFloat(balance) });
            }
        } else {
            selectedInvoices = selectedInvoices.filter(inv => inv.id !== invoiceId);
        }
        
        const selectAllCheckbox = document.querySelector('[data-select-all]');
        const allCheckboxes = document.querySelectorAll('[data-invoice-checkbox]');
        if (selectAllCheckbox) {
            selectAllCheckbox.checked = selectedInvoices.length === allCheckboxes.length;
        }
        
        updateSelection();
    }
    
    function updateSelection() {
        const total = selectedInvoices.reduce((sum, inv) => sum + inv.balance, 0);
        const count = selectedInvoices.length;
        
        const countDisplay = document.getElementById('selected-count');
        const totalDisplay = document.getElementById('selected-total');
        const selectionHeader = document.getElementById('selection-header');
        
        if (countDisplay) countDisplay.textContent = count;
        if (totalDisplay) totalDisplay.textContent = '$' + total.toFixed(2);
        if (selectionHeader) {
            selectionHeader.style.visibility = count > 0 ? 'visible' : 'hidden';
        }
        
        const bulkActionsBar = document.getElementById('bulk-actions-bar');
        const bulkActionsCount = document.getElementById('bulk-actions-count');
        
        if (bulkActionsBar) {
            bulkActionsBar.style.display = count > 0 ? 'block' : 'none';
        }
        if (bulkActionsCount) {
            bulkActionsCount.textContent = count;
        }
    }
</script>