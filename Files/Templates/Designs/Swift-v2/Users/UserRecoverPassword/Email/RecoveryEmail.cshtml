@inherits Dynamicweb.Rendering.ViewModelTemplate<UserPasswordRecoveryEmailViewModel>
@using Dynamicweb.Frontend

<h2>@Translate("Password recovery")</h2>

@if (!string.IsNullOrWhiteSpace(Model.RecoveryLink))
{
    <p>@Translate("Hi") @Model.User.Name</p>
    <p>
        @Translate("We have received a request to reset the password for your account")
        @Translate("Click on the link below to create a new password")
    </p>

    <a href="@Model.RecoveryLink">@Translate("Create new password")</a>

    <p>@Translate("If you didn't ask to reset your password, ignore this email and your password will not be changed")</p>
}
