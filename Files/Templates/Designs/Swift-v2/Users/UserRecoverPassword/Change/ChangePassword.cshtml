@inherits Dynamicweb.Rendering.ViewModelTemplate<UserPasswordRecoverViewModel>
@using Dynamicweb.Users.Frontend.RecoverPasswordModule

<div class="mx-auto" style="max-width: 30rem;">
    @if (Model.Result == RecoverPasswordResultType.MismatchedPasswords)
    {
        <div class="alert alert-danger" role="alert">
            @Translate("Passwords don't match")
        </div>
    }

    @if (Model.Result == RecoverPasswordResultType.InvalidPasswordLength)
    {
        <div class="alert alert-danger" role="alert">
            @Translate("Password not accepted: Length is not valid")
        </div>
    }

    @if (Model.Result == RecoverPasswordResultType.InvalidPasswordComplexity)
    {
        <div class="alert alert-danger" role="alert">
            @Translate("Password not complex enough: You need both letters and numbers")
        </div>
    }

    @if (Model.Result == RecoverPasswordResultType.Success)
    {
        <div class="alert alert-success" role="alert">
            @Translate("Password changed")
        </div>
    }

    <form method="post">
        <input type="hidden" name="UserRecoverPassword" value="true"/>

        <div class="form-floating mb-3">
            <input type="password" name="NewPassword" id="NewPassword" class="form-control" placeholder="@Translate("New password")" required>
            <label for="NewPassword">@Translate("New password")</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" name="ConfirmNewPassword" id="ConfirmNewPassword" class="form-control" placeholder="@Translate("Confirm new password")" required>
            <label for="ConfirmNewPassword">@Translate("Confirm new password")</label>
        </div>

        <button type="submit" name="LoginAction" value="Recovery" class="btn btn-primary" data-dw-button="primary" id="PasswordRecoveryButton">@Translate("Change password")</button>
    </form>     
</div>

