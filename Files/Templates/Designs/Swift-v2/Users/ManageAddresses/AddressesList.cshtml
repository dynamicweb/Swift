@inherits ViewModelTemplate<AddressListViewModel>
@using Dynamicweb.Rendering
@using Dynamicweb.Frontend

@if (Model.Addresses.Count() > 0)
{
    <div class="grid w-100">
        <div class="g-col-12 g-col-lg-3 card" role="button"
            tabindex="0"
            aria-label="@Translate("New address")"
            data-bs-toggle="offcanvas" 
            data-bs-target="#DynamicOffcanvas"
            hx-trigger="click" 
            hx-target="#DynamicOffcanvas" 
            hx-get="/"
            hx-vals='{"ParagraphId": "@Pageview.CurrentParagraph.ID", "ID": "@Pageview.Page.ID", "LayoutTemplate": "Swift-v2_PageClean.cshtml", "AddressCmd": "CreateAddress"}'>
            
            <div class="card-body d-flex flex-column align-items-center justify-content-center gap-3">
                <div class="btn btn-primary" id="NewAddress">
                    +
                </div>
                <div>
                    @Translate("Add address")
                </div>
            </div>
        </div>

        @foreach (var address in Model.Addresses)
        {
            <address class="g-col-12 g-col-lg-3 card m-0">

                <div class="card-body">
                    @if (!string.IsNullOrEmpty(address.Name))
                    {
                        <h5 class="card-title">
                            @address.Name
                        </h5>
                    }
                    <p class="card-text">
                        @if (!string.IsNullOrEmpty(address.Address))
                        {
                            <div>
                                @address.Address
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(address.Zip) && !string.IsNullOrEmpty(address.City))
                        {
                            <div>
                                @address.Zip @address.City
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(address.State))
                        {
                            <div>
                                @address.State
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(address.CountryCode))
                        {
                            <div>
                                @address.CountryCode
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(address.Email))
                        {
                            <div>
                                @address.Email
                            </div>
                        }
                    </p>

                    <div class="mt-5 d-flex gap-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#deleteAddressModal_@address.Id">
                            <div class="icon-2">
                                @ReadFile("/Files/Images/Icons/trash-can.svg")
                            </div>
                        </button>

                        <div class="modal fade" id="deleteAddressModal_@address.Id" tabindex="-1" aria-labelledby="deleteAddressModalLabel_@address.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5 m-0" id="deleteAddressModalLabel_@address.Id">@Translate("Confirm delete address")</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @Translate("Are you sure you want to delete this address?")
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <form method="post">
                                    <input type="hidden" name="ID" value="@Pageview.ID">
                                    <input type="hidden" name="AddressId" value="@address.Id">
                                    <button type="submit" name="AddressCmd" value="DeleteAddress" class="btn btn-primary" id="DeleteAddressButton">
                                        @Translate("Delete")
                                    </button>
                                </form>
                            </div>
                            </div>
                        </div>
                        </div>

                        <button type="button" class="btn btn-secondary flex-fill" 
                            aria-label="@Translate("Edit address")"
                            data-bs-toggle="offcanvas" 
                            data-bs-target="#DynamicOffcanvas"
                            hx-trigger="click" 
                            hx-target="#DynamicOffcanvas" 
                            hx-get="/"
                            hx-vals='{"ParagraphId": "@Pageview.CurrentParagraph.ID", "ID": "@Pageview.Page.ID", "LayoutTemplate": "Swift-v2_PageClean.cshtml", "AddressId": "@address.Id"}'>

                            @Translate("Edit")
                        </button>
                    </div>
                </div>
            </address>
        }
    </div>

    @if (Model.PageCount > 1)
    {
        <form class="p-3 mt-3">
            <ul class="pagination m-0">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    var active = (i == Model.CurrentPage) ? "active" : string.Empty;
                    <li class="page-item @active">
                        <button type="submit" class="page-link" name="PageNum" value="@i">@i</button>
                    </li>
                }
            </ul>
        </form>
    }
}
else
{
    <div class="alert alert-info text-center mt-3" role="alert">
        @Translate("No addresses found")
    </div>
}