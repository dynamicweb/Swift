@inherits ViewModelTemplate<CreateUserViewModel>
@using Dynamicweb.Rendering
@using Dynamicweb.Users.Frontend.CreateUser

<div class="mx-auto w-100" style="max-inline-size: 30rem;">
    @if (Model.Result == CreateUserResultType.EmailAlreadyExists)
    {
        <div class="alert alert-danger">@Translate("The email already exists")</div>
    }
    else if (Model.Result == CreateUserResultType.InvalidEmail)
    {
        <div class="alert alert-danger">@Translate("The email is invalid")</div>
    }
    else if (Model.Result == CreateUserResultType.InvalidPasswordComplexity)
    {
        <div class="alert alert-danger">@Translate("The password must contain numbers, upper and lower case characters and special characters")</div>
    }
    else if (Model.Result == CreateUserResultType.InvalidPasswordLength)
    {
        <div class="alert alert-danger">@Translate("The password is not long enough")</div>
    }
    else if (Model.Result == CreateUserResultType.MismatchedPasswords)
    {
        <div class="alert alert-danger">@Translate("The passwords are not the same")</div>
    }
    else if (Model.Result == CreateUserResultType.UserNameAlreadyExists)
    {
        <div class="alert alert-danger">@Translate("Username already exists")</div>
    }
    else if (Model.Result != CreateUserResultType.None)
    {
        <div class="alert alert-danger">@Translate(Model.Result.ToString())</div>
    }

    <form method="post">
        <input type="hidden" name="UserName" id="UserName" value="@Model.Email" />
        
        <div class="form-floating mb-4">
            <input type="email" class="form-control" placeholder="@Translate("Email")" name="Email" id="Email" value="@Model.Email" required />
            <label for="Email" class="form-label">@Translate("Email")</label>
        </div>

        <div class="form-floating mb-4">
            <input type="password" class="form-control" id="Password" name="Password" placeholder="@Translate("Password")" required>
            <label for="Password">@Translate("Password")</label>
        </div>

        <div class="form-floating mb-4">
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="@Translate("Confirm password")" required>
            <label for="ConfirmPassword">@Translate("Confirm password")</label>
        </div>

        <button type="submit" name="Cmd" value="createuser" class="btn btn-primary w-100" data-dw-button="primary" id="CreateUser">@Translate("Create user")</button>
    </form>
</div>
