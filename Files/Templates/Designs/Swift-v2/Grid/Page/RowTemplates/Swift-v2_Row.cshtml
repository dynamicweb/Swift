@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.GridRowViewModel>

@{
	bool columnsHasOutput = Model.Columns.Any(c => !string.IsNullOrWhiteSpace(c.Output())) || Pageview.IsVisualEditorMode;
	string backgroundImage = Model.BackgroundImage?.Path != null ? $"background-image: url({Model.BackgroundImage.Path}); " : null;
}

@if (columnsHasOutput) {
	<section class="py-6" data-dw-colorscheme="@Model.ColorScheme?.Id" style="@backgroundImage" data-swift-gridrow>
		<div class="container-xl grid">
			@foreach(var column in Model.Columns)
			{
				<div class="g-col-12 g-col-lg-@column.ColumnWidth d-flex flex-column justify-content-center" >
					@column.Output()
				</div>
			}
		</div>
	</section>
}
