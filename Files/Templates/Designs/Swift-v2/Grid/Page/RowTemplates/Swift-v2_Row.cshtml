@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.GridRowViewModel>
@using Dynamicweb.Frontend


<section style="@Model.BackgroundImage?.ToBackgroundStyle(new () { Width=1680 }, true)" 
	data-dw-colorscheme="@Model.ColorScheme?.Id" 
	data-dw-itemtype="@Model?.Item?.SystemName.ToLower()" 
	data-swift-gridrow 
	data-dw-row-space-top="@Model.TopSpacing" 
	data-dw-row-space-bottom="@Model.BottomSpacing" 
	data-dw-row-column-gap="@Model.GapX">

	<div class="grid align-items-center" 
		data-swift-container 	
		data-dw-container-width="@Model.ContainerWidth">

		@foreach(var column in Model.Columns)
		{
			<div class="g-col-12 g-col-lg-@column.ColumnWidth" data-dw-itemtype="@column.Paragraph?.Item?.SystemName.ToLower()" id="@column.Paragraph?.ID" data-dw-colorscheme="@column.Paragraph?.ColorScheme?.Id" data-swift-gridcolumn>
				@column.Output()
			</div>
		}
	</div>
</section>
